@model Treehouse.AspNetCore.ViewModels.TeamViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team2.Id" />
            <div class="form-group">
                <label asp-for="Team2.TeamName" class="control-label"></label>
                <input asp-for="Team2.TeamName" class="form-control" />
                <span asp-validation-for="Team2.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team2.LocationName" class="control-label"></label>
                <input asp-for="Team2.LocationName" class="form-control" />
                <span asp-validation-for="Team2.LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team2.Division.name" class="control-label"></label>
                <select asp-for="Team2.Division.name" asp-items="Model.Divisions" class="form-control">
                    <option value="">Please Select a Division</option>
                </select>
                <span asp-validation-for="Team2.Division.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
