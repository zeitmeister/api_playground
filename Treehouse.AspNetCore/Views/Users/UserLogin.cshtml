@model Treehouse.AspNetCore.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "UserLogin";
}


<h1>UserLogin</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label for="@Model.Email"></label>
                <input type="text" asp-for="Email" placeholder="email" />
            </div>
            <div>
                <label for="@Model.Password"></label>
                <input type="password" asp-for="Password" placeholder="password" />
            </div>

            <input type="submit" value="Log in" />
        </form>

    </div>
</div>